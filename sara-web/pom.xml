<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.sara</groupId>
		<artifactId>sara</artifactId>
		<version>1</version>
	</parent>

	<groupId>com.sara.web</groupId>
	<artifactId>sara-web</artifactId>
	<name>sara-web</name>
	<description>sara-web</description>


	<properties>
		<project.war.name>sara-web</project.war.name>
		<frontend-bundle-dir>${project.basedir}/react/build/</frontend-bundle-dir>
		<java.version>1.8</java.version>
		<jjwt.version>0.9.1</jjwt.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.sara.data</groupId>
			<artifactId>sara-data</artifactId>
			<version>1</version>
		</dependency>
		<dependency>
			<groupId>com.sara.service</groupId>
			<artifactId>sara-service</artifactId>
			<version>1</version>
		</dependency>
		<dependency>
			<groupId>com.sara.web.security</groupId>
			<artifactId>sara-web-security</artifactId>
			<version>1</version>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.build.directory}/classes/resources/</outputDirectory>
							<resources>
								<resource>
									<directory>${frontend-bundle-dir}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<packagingExcludes>WEB-INF/lib/tomcat-*.jar</packagingExcludes>
					<warName>${project.name}.war</warName>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>